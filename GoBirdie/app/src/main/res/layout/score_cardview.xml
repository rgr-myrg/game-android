<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/score_cardview"
	android:layout_width="@dimen/score_cardview_size"
	android:layout_height="@dimen/score_cardview_size"
	android:elevation="7dp"
	android:layout_gravity="center"
	android:background="@color/cardview_light_background"
	app:contentPadding="5dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/cardview_light_background"
		android:layout_gravity="center"
		android:gravity="center"
		android:orientation="vertical">
		<TextView
			android:id="@+id/total_score_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"/>
		<TextView
			android:id="@+id/high_score_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"/>
		<TextView
			android:id="@+id/life_score_textview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"/>
	</LinearLayout>
</android.support.v7.widget.CardView>