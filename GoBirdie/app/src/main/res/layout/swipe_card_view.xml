<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.CardView
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/swipe_card_view_margin"
		app:cardCornerRadius="@dimen/swipe_card_view_radius"
		app:cardElevation="@dimen/swipe_card_view_elevation"
		app:cardBackgroundColor="@color/cardview_light_background">

		<ImageView
			android:id="@+id/sceneImageView"
			android:scaleType="centerCrop"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="@dimen/swipe_card_view_image_margin"/>

		<TextView
			android:id="@+id/sceneTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorPrimaryDark"
			android:layout_gravity="bottom"
			android:gravity="top"
			android:padding="@dimen/scoreboard_text_padding_left"
			android:layout_marginBottom="@dimen/swipe_card_view_text_View_margin"
			style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"/>

	</android.support.v7.widget.CardView>
</FrameLayout>
